<Window x:Class="FactoryPattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryPattern"
        xmlns:model ="clr-namespace:FactoryPattern.Model"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type model:Folder}">
            
        </DataTemplate>


    </Window.Resources>


        <Grid>
            <ListView Name="ListView1" Loaded="Windows_Loaded" ItemsSource="{Binding Folder, XPath=Folder}">
                
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Folder" Width="120" DisplayMemberBinding="{Binding XPath=Name}" />
                        <GridViewColumn Header="Text" Width="50" DisplayMemberBinding="{Binding dataFetcherText}" />
                        <GridViewColumn Header="Image" Width="150" DisplayMemberBinding="{Binding DataFetcherImage}" />
                    </GridView>
                </ListView.View>

            </ListView>


    </Grid>
   
</Window>
